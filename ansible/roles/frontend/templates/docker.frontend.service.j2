[Unit]
Description=Frontend for JSON-filter
After=docker.service docker.restapi.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
RestartSec=5
ExecStartPre=-/usr/bin/docker kill %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull oleksiihead/frontend:2.2
ExecStart=/usr/bin/docker run \
    --rm --name %n \
    -h frontend \
    --net bridge_issue \
    -p 55000:5000 \
    oleksiihead/frontend:2.2
ExecStop=/usr/bin/docker stop -t 10 %n

[Install]
WantedBy=multi-user.target
